@model IEnumerable<Vehicle>

@{
    ViewBag.Title = "All Vehicles";
}
    <h1>
        All Vehicles
    </h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateVehicle"
        asp-controller="vehicle">Add new Vehicle</a>
    foreach (var vehicle in Model)
    {
       // var photoPath = "~/images/" + (qualification.Photopath ?? "1.PNG");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card mb-3">
                <div class="card-header">
                    @vehicle.Brand
                </div>
                @*<img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" />*@

                <div class="card-footer">
                    <form>
                        <a asp-action="EditVehicles" asp-controller="vehicle"
                           asp-route-uid="@vehicle.Id" class="btn btn-primary">Edit</a>

                        <a asp-action="DeleteVehicle" asp-controller="vehicle"
                           asp-route-uid="@vehicle.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="DetailsVehicle" asp-controller="vehicle" asp-route-id="@vehicle.Id"
                           class="btn btn-primary">Details</a>
                    </form>
                </div>

            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Vehicle created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a Vehicle
            </h5>
            <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateVehicle"
               asp-controller="vehicle">Add new Vehicle
            </a>
        </div>
    </div>
}
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}
